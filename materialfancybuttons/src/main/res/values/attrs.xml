<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="MaterialFancyButtonAttrs">

    <!-- Default Android attrs -->
    <attr name="android:enabled"/>
    <attr name="android:text"/>
    <attr name="android:textSize"/>
    <attr name="android:textAllCaps"/>

    <attr format="color" name="mfb_defaultColor"/>
    <attr format="string" name="mfb_text"/>

    <attr format="color" name="mfb_textColor"/>
    <attr format="color" name="mfb_iconColor"/>

    <attr format="string" name="mfb_textFont"/>
    <attr format="string" name="mfb_iconFont"/>

    <attr format="dimension" name="mfb_textSize"/>
    <attr format="integer" name="mfb_iconResource"/>
    <attr format="string" name="mfb_icon"/>
    <attr format="string" name="mfb_fontIconResource"/>
    <attr format="dimension" name="mfb_fontIconSize"/>
    <attr format="enum" name="mfb_iconPosition">
      <enum name="left" value="1"/>
      <enum name="right" value="2"/>
      <enum name="top" value="3"/>
      <enum name="bottom" value="4"/>
    </attr>

    <attr format="enum" name="mfb_textPosition">
      <enum name="left" value="1"/>
      <enum name="right" value="2"/>
      <enum name="top" value="3"/>
      <enum name="bottom" value="4"/>
    </attr>

    <attr format="enum" name="mfb_textGravity">
      <enum name="top" value="0x30"/>
      <enum name="bottom" value="0x50"/>
      <enum name="left" value="0x03"/>
      <enum name="right" value="0x05"/>
      <enum name="center_vertical" value="0x10"/>
      <enum name="fill_vertical" value="0x70"/>
      <enum name="center_horizontal" value="0x01"/>
      <enum name="fill_horizontal" value="0x07"/>
      <enum name="center" value="0x11"/>
      <enum name="fill" value="0x77"/>
      <enum name="clip_vertical" value="0x80"/>
      <enum name="clip_horizontal" value="0x08"/>
      <enum name="start" value="0x00800003"/>
      <enum name="end" value="0x00800005"/>
    </attr>

    <attr format="dimension" name="mfb_iconPaddingLeft"/>
    <attr format="dimension" name="mfb_iconPaddingRight"/>
    <attr format="dimension" name="mfb_iconPaddingTop"/>
    <attr format="dimension" name="mfb_iconPaddingBottom"/>

    <attr format="color" name="mfb_borderColor"/>
    <attr format="dimension" name="mfb_borderWidth"/>
    <attr format="color" name="mfb_focusColor"/>
    <attr format="color" name="mfb_disabledColor"/>
    <attr format="color" name="mfb_disabledTextColor"/>
    <attr format="color" name="mfb_disabledBorderColor"/>

    <attr format="dimension" name="mfb_radius"/>
    <attr format="dimension" name="mfb_radiusTopLeft"/>
    <attr format="dimension" name="mfb_radiusTopRight"/>
    <attr format="dimension" name="mfb_radiusBottomLeft"/>
    <attr format="dimension" name="mfb_radiusBottomRight"/>

    <attr format="boolean" name="mfb_textAllCaps"/>

    <attr format="boolean" name="mfb_ghost"/>
    <!--<attr format="boolean" name="fb_useSystemFont"/>-->
  </declare-styleable>

</resources> 